@model DinnerIn.Web.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

    <div id="viewport">
            <section class="main-banner" id="home">
                <div class="sec-wp">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="banner-text">
                                    <h1 class="h1-title">
                                        Välkommen till 
                                        <span>DinnerIN</span>
                                        
                                    </h1>
                                <p>En inspirerande plats för kulinariska äventyr och läckra recept. Där matlagning blir till konst och din matresa börjar med enkla steg och en stor dos av kreativitet! </p>
                                  
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="banner-img-wp">
                                <div class="banner-img" style="background-image: url(https://images.squarespace-cdn.com/content/v1/5eb1211225719420f0c80392/1594125878478-V0T9907BCSZES8TZXLPQ/champagnesnacks.jpg?format=1500w);">
                                    </div>
                                </div>
@*                                <div class="banner-img-text mt-4 m-auto">*@
@*                                    <h5 class="h5-title">Your favorite recipes for snacks and sparkling nights!</h5>
                                    <p>this is Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>


<div class="container col-xxl-8 px-4 py-5">

    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                    Upptäck Höjdpunkten av Snackselegans!
            </h1>
            <p class="lead">
                    Upptäck en förtrollande värld av förfinade och extravagant smakupplevelser för minnesvärda kvällar. Som en del av vårt sällskap får du tillgång till exklusiva recept och inspirerande kulinariska råd. 
                    Gå med i vår gemenskap och skapa minnesvärda smakresor som kommer att stanna kvar i ditt minne. Upplev den ultimata nivån av gastronomisk elegans!

            </p>
        </div>
        
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/3402697/pexels-photo-3402697.jpeg?auto=compress&cs=tinysrgb&w=400"
                 alt="DinnerIn - SparklingSpreads"
            class="d-blok mx-lg-aut img-fluid" width="300"/>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if(Model != null && Model.Tags.Any())
            {
                foreach(var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">
                        @tag.Name

                    </span>
                }
            }
        </div>

    </div>


</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if(Model != null && Model.Recipes.Any())
            {
                foreach(var recipe in Model.Recipes)
                {
                    <div class="mb-5 bg-dark box-shadow p-5">
                        <img src="@recipe.FeatureImageUrl" alt="@recipe.Heading" 
                        class="mb-2 d-block img-fluid"/>

                        <h2 class="mb-4">@recipe.Heading</h2>
                        <p class="mb-4">
                            Chef: @recipe.Chef
                            <br/>
                            Published Date: @recipe.PublishedDate.ToShortDateString()
                        </p>

                        <p class="mb-4">
                            @foreach (var tag in recipe.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>

                        <p class=" =mb-4">@recipe.ShortDescription</p>
                        <p class=" =mb-5">@recipe.ServingSuggestions</p>


                        <a class="btn - btn-dark" 
                        asp-area=""
                        asp-controller="Recipes"
                        asp-action="Index"
                        asp-route-urlHandle="@recipe.UrlHandle"
                        > Read more </a>
                        
                    </div>
                }
            }
        </div>
    </div>
</div>