@model DinnerIn.Web.Models.ViewModels.LoginViewModel
@{
}


<link rel="stylesheet" type="text/css" href="site.css">
<section class="h-100 gradient-form" style="background-color: #ffffff;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">


                                    <img src="/dinnerin.png" width="150" height="150" alt="Logo" />

                                    <img src="~/dinnerin.png" width="150" height="150" alt="Logo" />
                                    <img src="@Url.Content("~/Images/dinnerin.jpg")" width="150" height="150" alt="Logo" />

                                    <h4 class="mt-1 mb-5 pb-1">Ditt konto:</h4>
                                </div>

                                <form>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example11">Användarnamn</label>
                                        <input type="email" id="form2Example11" class="form-control" />

                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example22">Lösenord</label>
                                        <input type="password" id="form2Example22" class="form-control" />

                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="button">
                                            Logga
                                            in
                                        </button>
                                        <a class="text-muted" href="#!">Glömt lösenord?</a>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Har du inget konto?</p>
                                        <button type="button" class="btn btn-outline-danger">Skapa ett nytt konto!</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">Upptäck Höjdpunkten av Snackselegans!</h4>
                                <p class="small mb-0">
                                    Utforska en värld av eleganta och lyxiga recept på snacks och tilltugg för minnesvärda kvällar. Som medlem hos oss får du tillgång till exklusiva recept och inspirerande kulinariska tips.
                                    Bli en del av vår gemenskap och skapa oförglömliga snackingupplevelser. Upplev kulinarisk lyx på sitt allra bästa!
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="container mx-aut">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">
                Login
            </h1>

            <form method="post">

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" class="form.control" asp-for="Username" />
                </div>              
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="text" id="password" class="form.control" asp-for="Password" />
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Login</button>

                </div>

                <input type="hidden" asp-for="ReturnUrl"/>
            </form>
        </div>
    </div>
</div>